<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ddl.hat">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_hat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/perso">
        <activity android:name="com.ddl.hat.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ddl.hat.PlayActivity" />
        <activity
            android:name="com.ddl.hat.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.ddl.hat.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ddl.hat.HomeActivity" />
        </activity>
    </application>

</manifest>